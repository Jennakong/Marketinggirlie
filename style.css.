/* Styling the About section container */
#about {
    max-width: 1200px;   /* Limits the maximum width of the section */
    width: 100%;         /* Ensures full width on smaller screens */
    margin: 0 auto;      /* Centers the section */
    padding: 20px;       /* Adds padding around the section */
    text-align: center;  /* Centers the text */
}

/* Making the About Me image responsive */
.about-image {
    max-width: 100%;  /* Image scales down to fit smaller screens */
    height: auto;     /* Maintains the image's aspect ratio */
    display: block;   /* Ensures the image doesn't have extra spacing */
    margin: 20px auto; /* Adds margin around the image and centers it */
}

/* Responsive adjustments for tablets */
@media (max-width: 768px) {
    .about-image {
        max-width: 90%;  /* Slightly reduce the image size for tablets */
    }
}

/* Responsive adjustments for mobile */
@media (max-width: 480px) {
    .about-image {
        max-width: 100%; /* Ensure full width on mobile screens */
    }
}
